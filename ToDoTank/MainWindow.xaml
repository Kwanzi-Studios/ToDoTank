<Window x:Class="ToDoTank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoTank"
        xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="ToDoTank" Width="1280" Height="720"
        WindowStartupLocation="CenterScreen"
        Background="#0F0F1A"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <Storyboard x:Key="FadeInStory">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:1.8"/>
        </Storyboard>
        <local:BooleanToWidthConverter x:Key="BooleanToWidthConverter"
                                       CollapsedWidth="0"
                                       ExpandedWidth="320"/>
        <local:BooleanToAngleConverter x:Key="BooleanToAngleConverter"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <!-- Top bar - minimize & close -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                    Orientation="Horizontal" HorizontalAlignment="Right"
                    VerticalAlignment="Center" Margin="0,0,12,0">
            <Button x:Name="MinimizeButton"
                    Width="40" Height="40"
                    Margin="0,0,8,0"
                    Background="Transparent" BorderThickness="0"
                    Foreground="#AAAAAA" FontSize="16" FontWeight="Bold"
                    Content="─"
                    Click="MinimizeButton_Click"
                    MouseEnter="WindowControl_MouseEnter"
                    MouseLeave="WindowControl_MouseLeave"/>
            <Button x:Name="CloseButton"
                    Width="40" Height="40"
                    Background="Transparent" BorderThickness="0"
                    Foreground="#AAAAAA" FontSize="20" FontWeight="Bold"
                    Content="×"
                    Click="CloseButton_Click"
                    MouseEnter="WindowControl_MouseEnter"
                    MouseLeave="WindowControl_MouseLeave"/>
        </StackPanel>
        <!-- Tank area -->
        <Canvas x:Name="TankCanvas"
                Grid.Row="1" Grid.Column="0"
                ClipToBounds="True"
                Background="{Binding TankBackground, RelativeSource={RelativeSource AncestorType=Window}}"/>
        <!-- Right sidebar -->
        <Grid x:Name="RightPanel"
              Grid.Row="1" Grid.Column="1"
              Background="#1A1A2E"
              Width="{Binding ElementName=ToggleButton, Path=IsChecked, Converter={StaticResource BooleanToWidthConverter}}">
            <StackPanel Margin="16">
                <TextBlock Text="Task Categories"
                           FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                <ComboBox x:Name="CategoryCombo" Height="36" Margin="0,0,0,12"
                          SelectionChanged="CategoryCombo_SelectionChanged"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,24">
                    <Button Content="New..." Width="90" Margin="0,0,12,0" Click="NewCategory_Click"/>
                    <Button Content="Delete" Width="90" Click="DeleteCategory_Click"/>
                </StackPanel>
                <!-- Customization -->
                <TextBlock Text="New Task Settings"
                           FontSize="16" Foreground="White" Margin="0,24,0,8"/>
                <TextBlock Text="Default Font Size" Foreground="WhiteSmoke" Margin="0,0,0,4"/>
                <Slider x:Name="DefaultFontSizeSlider" Minimum="8" Maximum="72" Value="24"
                        Height="20" Margin="0,0,0,16" TickFrequency="4" IsSnapToTickEnabled="True"/>
                <TextBlock Text="Text Color" Foreground="WhiteSmoke" Margin="0,0,0,4"/>
                <xctk:ColorPicker x:Name="TextColorPicker"
                                  SelectedColor="White"
                                  Height="30" Margin="0,0,0,16"
                                  DisplayColorAndName="True"
                                  ShowRecentColors="True"
                                  ShowAvailableColors="True"/>
                <TextBlock Text="Priority Color" Foreground="WhiteSmoke" Margin="0,0,0,4"/>
                <xctk:ColorPicker x:Name="PriorityColorPicker"
                                  SelectedColor="Orange"
                                  SelectedColorChanged="PriorityColorPicker_SelectedColorChanged"
                                  Height="30" Margin="0,0,0,16"
                                  DisplayColorAndName="True"
                                  ShowRecentColors="True"
                                  ShowAvailableColors="True"/>
                <TextBlock Text="Tank Background" Foreground="WhiteSmoke" Margin="0,0,0,4"/>
                <xctk:ColorPicker x:Name="BackgroundColorPicker"
                                  SelectedColor="#0F0F1A"
                                  Height="30" Margin="0,0,0,12"
                                  DisplayColorAndName="True"
                                  ShowRecentColors="True"
                                  ShowAvailableColors="True"/>
                <TextBlock Text="Current category tasks will float in the tank."
                           TextWrapping="Wrap" FontSize="13" Foreground="#AAAAAA" Margin="0,12,0,0"/>
            </StackPanel>
        </Grid>
        <!-- Sidebar toggle -->
        <ToggleButton x:Name="ToggleButton"
                      Grid.Row="1" Grid.Column="1"
                      Width="28" Height="80"
                      HorizontalAlignment="Right" VerticalAlignment="Center"
                      Background="#2A2A4A" BorderThickness="0" Foreground="White"
                      Content="&gt;" FontSize="18" IsChecked="False">
            <ToggleButton.RenderTransform>
                <RotateTransform Angle="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}, Converter={StaticResource BooleanToAngleConverter}}"/>
            </ToggleButton.RenderTransform>
        </ToggleButton>
        <!-- Bottom input -->
        <Grid Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="NewTaskText" Grid.Column="0" Height="44" FontSize="16"
                     Padding="12,0" VerticalContentAlignment="Center"
                     Background="#1E1E38" Foreground="WhiteSmoke" BorderBrush="#3A3A5A"
                     KeyDown="NewTaskText_KeyDown"/>
            <Button Grid.Column="1" Content="Add Task" Width="120" Margin="12,0,0,0"
                    Click="AddTask_Click" IsDefault="True"/>
        </Grid>
    </Grid>
</Window>