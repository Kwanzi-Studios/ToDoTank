<Window x:Class="ToDoTank.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoTank"
        xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
        mc:Ignorable="d"
        Title="ToDoTank" Width="1280" Height="720"
        WindowStartupLocation="CenterScreen"
        Background="#0F0F1A"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <Storyboard x:Key="FadeInStory">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:1.8"/>
        </Storyboard>
        <local:BooleanToWidthConverter x:Key="BooleanToWidthConverter"
                                       CollapsedWidth="0"
                                       ExpandedWidth="320"/>
        <local:BooleanToArrowConverter x:Key="BooleanToArrowConverter"/>
        <!-- Custom style for the side toggle button -->
        <Style x:Key="SideToggleButtonStyle" TargetType="{x:Type ToggleButton}">
            <Setter Property="Background" Value="#2A2A4A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ToggleButton}">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover state - primary visual feedback -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A3A6A"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black"
                                                         Direction="320"
                                                         ShadowDepth="2"
                                                         BlurRadius="8"
                                                         Opacity="0.35"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Pressed state -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E1E38"/>
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black"
                                                         Direction="320"
                                                         ShadowDepth="1"
                                                         BlurRadius="4"
                                                         Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <!-- Subtle indicator when panel is open (optional - remove if unwanted) -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderThickness" Value="0,0,0,3"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#5A5AAA"/>
                            </Trigger>
                            <!-- Disabled (if ever used) -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.45"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <!-- Main content / tank -->
            <ColumnDefinition Width="*"/>
            <!-- Fixed-width toggle strip column -->
            <ColumnDefinition Width="32"/>
            <!-- Collapsible right panel -->
            <ColumnDefinition Width="{Binding ElementName=ToggleButton, Path=IsChecked, Converter={StaticResource BooleanToWidthConverter}}"/>
        </Grid.ColumnDefinitions>
        <!-- Top bar - minimize & close -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"
                    Orientation="Horizontal" HorizontalAlignment="Right"
                    VerticalAlignment="Center" Margin="0,0,12,0">
            <Button x:Name="MinimizeButton"
                    Width="40" Height="40"
                    Margin="0,0,8,0"
                    Background="Transparent" BorderThickness="0"
                    Foreground="#AAAAAA" FontSize="16" FontWeight="Bold"
                    Content="─"
                    Click="MinimizeButton_Click"
                    MouseEnter="WindowControl_MouseEnter"
                    MouseLeave="WindowControl_MouseLeave"/>
            <Button x:Name="CloseButton"
                    Width="40" Height="40"
                    Background="Transparent" BorderThickness="0"
                    Foreground="#AAAAAA" FontSize="20" FontWeight="Bold"
                    Content="×"
                    Click="CloseButton_Click"
                    MouseEnter="WindowControl_MouseEnter"
                    MouseLeave="WindowControl_MouseLeave"/>
        </StackPanel>
        <!-- Tank area -->
        <Canvas x:Name="TankCanvas"
                Grid.Row="1" Grid.Column="0"
                ClipToBounds="True"
                Background="{Binding TankBackground, RelativeSource={RelativeSource AncestorType=Window}}"/>
        <!-- Right sidebar / settings panel -->
        <Grid x:Name="RightPanel"
              Grid.Row="1" Grid.Column="2"
              Background="#1A1A2E">
            <StackPanel Margin="16">
                <TextBlock Text="Task Categories"
                           FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,12"/>
                <ComboBox x:Name="CategoryCombo" Height="36" Margin="0,0,0,12"
                          SelectionChanged="CategoryCombo_SelectionChanged"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,24">
                    <Button Content="New..." Width="90" Margin="0,0,12,0" Click="NewCategory_Click"/>
                    <Button Content="Delete" Width="90" Click="DeleteCategory_Click"/>
                </StackPanel>
                <!-- Customization section -->
                <TextBlock Text="New Task Settings"
                           FontSize="16" Foreground="White" Margin="0,24,0,8"/>
                <TextBlock Text="Font Size" Foreground="WhiteSmoke" Margin="0,0,0,4"/>
                <Slider x:Name="DefaultFontSizeSlider" Minimum="8" Maximum="72" Value="24"
                        Height="20" Margin="0,0,0,16" TickFrequency="4" IsSnapToTickEnabled="True"/>
                <TextBlock Text="Text Color" Foreground="WhiteSmoke" Margin="0,0,0,4"/>
                <xctk:ColorPicker x:Name="TextColorPicker"
                                  SelectedColor="White"
                                  Height="30" Margin="0,0,0,16"
                                  DisplayColorAndName="True"
                                  ShowRecentColors="True"
                                  ShowAvailableColors="True"
                                  ShowStandardColors="True"/>
                <TextBlock Text="Priority Color" Foreground="WhiteSmoke" Margin="0,0,0,4"/>
                <xctk:ColorPicker x:Name="PriorityColorPicker"
                                  SelectedColor="Orange"
                                  SelectedColorChanged="PriorityColorPicker_SelectedColorChanged"
                                  Height="30" Margin="0,0,0,16"
                                  DisplayColorAndName="True"
                                  ShowRecentColors="True"
                                  ShowAvailableColors="True"
                                  ShowStandardColors="True"/>
                <TextBlock Text="Tank Background" Foreground="WhiteSmoke" Margin="0,0,0,4"/>
                <xctk:ColorPicker x:Name="BackgroundColorPicker"
                                  SelectedColor="#0F0F1A"
                                  Height="30" Margin="0,0,0,12"
                                  DisplayColorAndName="True"
                                  ShowRecentColors="True"
                                  ShowAvailableColors="True"
                                  ShowStandardColors="True"/>
            </StackPanel>
        </Grid>
        <!-- Toggle button – fixed position, arrow via content binding, full vertical stretch -->
        <ToggleButton x:Name="ToggleButton"
                      Grid.Row="1" Grid.Column="1"
                      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                      Style="{StaticResource SideToggleButtonStyle}"
                      Content="{Binding IsChecked, RelativeSource={RelativeSource Self}, Converter={StaticResource BooleanToArrowConverter}}"
                      Foreground="White"
                      FontSize="24"
                      FontWeight="Bold"
                      IsChecked="False"/>
        <!-- Bottom input area (only in main column) -->
        <Grid Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="NewTaskText" Grid.Column="0" Height="44" FontSize="16"
                     Padding="12,0" VerticalContentAlignment="Center"
                     Background="#1E1E38" Foreground="WhiteSmoke" BorderBrush="#3A3A5A"
                     KeyDown="NewTaskText_KeyDown"/>
            <Button Grid.Column="1" Content="Add Task" Width="120" Margin="12,0,0,0"
                    Click="AddTask_Click" IsDefault="True"/>
        </Grid>
    </Grid>
</Window>